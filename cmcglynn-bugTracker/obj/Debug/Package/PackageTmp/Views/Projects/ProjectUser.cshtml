@model cmcglynn_bugTracker.Models.ProjectViewModel
@{
    ViewBag.Title = "ProjectUser";
}
<h2 style="text-shadow:-1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;text-decoration: underline; text-align:center; font-family:'Goudy Old Style'; color:red; font-size:45px">ASSIGN USERS TO PROJECT</h2>
@using (Html.BeginForm("ProjectUser", "Projects", FormMethod.Post))
{
    <h3 style="text-shadow:-1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000; text-decoration: underline; text-align:center; font-family:'Goudy Old Style'; color:gray;">
        Project Name : @Model.AssignProject.Title
    <input type="submit" value="Assign Projects" class="btn btn-default pull-right" style="margin-top: -7px" />
</h3>
    <hr />
   
   

    @*<h3>Project Name : @Model.AssignProject.Title</h3>

    @Html.ListBox("SelectedUsers", Model.Users)
    <button type="submit">Submit</button>*@
    <hr />
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.AssignProjectId)
    @Html.ListBox("SelectedUsers", Model.Users, new { @class = "multi-select" })
}

<div style="margin-top: 40px">
    @Html.ActionLink("Back to Projects Index", "Index")
</div>
@section Scripts {

    <script src="~/Assets/MultiSelect/MultiSelect.js"></script>
    <script type="text/javascript">
        //MULTISELECT INPUTS
        $(function () {
            "use strict";
            $('.multi-select').multiSelect({
                selectableHeader: "<div styles='text-align: center; background-color: black; color: white'><strong>Available Users</strong></div>",
                selectionHeader: "<div styles='text-align: center; background-color: black; color: white'><strong>User Users</strong></div>"
            });

            $(".ms-container").append('<i class="glyph-icon icon-exchange"></i>');
        });
    </script>
}